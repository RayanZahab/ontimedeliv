            android:name="com.example.ontimedeliv.OldOrdersInfoActivity"
            android:label="@string/title_activity_old_orders_info"
            android:windowSoftInputMode="adjustNothing" >
        </activity>
        <activity
            android:name="com.example.ontimedeliv.SearchResultsActivity"
            android:label="@string/title_activity_search_results" >
        </activity>
        <activity
            android:name="com.example.ontimedeliv.UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name="com.example.ontimedeliv.SelectLanguageActivity"
            android:label="Select language" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

</manifest>