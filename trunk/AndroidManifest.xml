        <activity
            android:name="com.example.ontimedeliv.OrderInfoActivity"
            android:label="@string/title_activity_order_info"
            android:windowSoftInputMode="adjustNothing" >
        </activity>
        <activity
            android:name="com.example.ontimedeliv.OrdersActivity"
            android:label="@string/title_activity_orders"
            android:windowSoftInputMode="adjustNothing" >
        </activity>
        <activity
            android:name="com.example.ontimedeliv.ProductsActivity"
            android:label="@string/title_activity_product"
            android:windowSoftInputMode="adjustNothing" >
