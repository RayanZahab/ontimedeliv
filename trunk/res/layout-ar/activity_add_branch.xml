<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e7e7e7"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/name"
                android:textColor="#6f6f71" />

            <EditText
                android:id="@+id/editTextAddName"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPostalAddress"
                android:paddingRight="5dp"
                android:textColor="#6f6f71"
                android:textColorHint="#bdbdbd" >
            </EditText>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/address"
                android:textColor="#6f6f71" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:hint="@string/address"
                android:inputType="text"
                android:paddingRight="5dp"
                android:textColor="#6f6f71"
                android:textColorHint="#bdbdbd" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/description"
                android:textColor="#6f6f71" />

            <EditText
                android:id="@+id/addDesc"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:hint="@string/description"
                android:inputType="text"
                android:paddingRight="5dp"
                android:textColor="#6f6f71"
                android:textColorHint="#bdbdbd" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/estimatedtime"
                android:textColor="#6f6f71" />

            <EditText
                android:id="@+id/estimation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:hint="@string/estimatedtime"
                android:inputType="numberSigned"
                android:paddingRight="5dp"
                android:textColor="#6f6f71"
                android:textColorHint="#bdbdbd" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/minorder"
                android:textColor="#6f6f71" />

            <EditText
                android:id="@+id/minorder"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:hint="@string/minorder"
                android:inputType="numberSigned"
                android:paddingRight="5dp"
                android:textColor="#6f6f71"
                android:textColorHint="#bdbdbd" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/deliverycharge"
                android:textColor="#6f6f71" />

            <EditText
                android:id="@+id/deliverycharge"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:hint="@string/deliverycharge"
                android:inputType="numberSigned"
                android:paddingRight="5dp"
                android:textColor="#6f6f71"
                android:textColorHint="#bdbdbd" />

            <TextView
                android:id="@+id/countryLabel"
                style="@style/mytextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/select_country"
                android:textColor="#6f6f71"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/countriesSP"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/myspinner"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:paddingRight="22dp"
                android:singleLine="false"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/citiesLabel"
                style="@style/mytextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/select_city"
                android:textColor="#6f6f71"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/citiesSP"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/myspinner"
                android:paddingRight="22dp"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/areaLabel"
                style="@style/mytextview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/select_area"
                android:textColor="#6f6f71"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/areasSP"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/myspinner"
                android:paddingRight="22dp"
                android:spinnerMode="dialog" />

            <ExpandableListView
                android:id="@+id/lvExp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000" >
            </ExpandableListView>
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="10dp"
            android:background="#1ea4aa"
            android:onClick="addBranch"
            android:text="@string/submit"
            android:textColor="#234666"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>