<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myred"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="?android:attr/actionBarSize" >

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/textView2"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/textView2"
                android:background="@drawable/myedittext"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView2"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="50dp"
                android:text="@string/username"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignLeft="@+id/username"
                android:background="@drawable/myedittext"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPassword" />
                

            <TextView
                android:id="@+id/textView3"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="38dp"
                android:text="@string/password"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keeploggedin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:background="@drawable/mybutton"
                android:minWidth="80dp"
                android:onClick="login"
                android:text="@string/buttonlogin"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView1"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="29dp"
                android:text="@string/selectlanguage" />

            <Spinner
                android:id="@+id/languageSP"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/password"
                android:layout_alignRight="@+id/password"
                android:layout_below="@+id/password"
                android:layout_marginTop="22dp"
                android:background="@drawable/myspinner"
                android:entries="@array/languages" />
            
            <CheckBox
		        android:id="@+id/keeploggedin"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/mytextview"
		        android:layout_marginTop="22dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@+id/languageSP"
		        android:text="Keep me Logged in" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>