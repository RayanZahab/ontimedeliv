<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myred"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin" >
	
	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/myborder">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="32dp"
            style="@style/mytextview"
            android:text="@string/producticon" />

        <Button
            android:id="@+id/addProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/units"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="addProduct"
            android:text="@string/submit"
            android:minWidth="80dp"
            android:background="@drawable/mybutton"
			android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/price"
            style="@style/mytextview"
            android:text="@string/slash"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/units"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/uploadimage"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@+id/textView5"
            android:background="@drawable/myspinner" />

        <TextView
            android:id="@+id/textView1"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="@string/productname" />

        <TextView
            android:id="@+id/textView2"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="39dp"
            android:text="@string/description" />

        <EditText
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/productName"
            android:layout_alignRight="@+id/productName"
            android:background="@drawable/myedittext"
            android:ems="10"
            android:gravity="center"
            android:inputType="text" />

        <Button
            android:id="@+id/uploadimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/description"
            android:layout_alignRight="@+id/description"
            android:background="@drawable/mybutton"
            android:minWidth="80dp"
            android:text="@string/selectphoto"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_above="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/myedittext"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:minWidth="30dp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/price"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_above="@+id/addProduct"
            android:layout_alignLeft="@+id/uploadimage"
            android:background="@drawable/myedittext"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView4"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/price"
            android:layout_alignBottom="@+id/price"
            android:layout_alignLeft="@+id/textView3"
            android:text="@string/priceunit" />

</RelativeLayout>
</ScrollView>
</RelativeLayout>