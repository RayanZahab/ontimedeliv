<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/myred"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_left_margin"
    android:paddingRight="@dimen/activity_left_margin"
    android:paddingTop="@dimen/activity_horizontal_margin" >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/myedittext"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/customerName"
                    style="@style/mytextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="10dp"
                    android:text="Name"
                    android:textColor="#ed1c24" />

                <TextView
                    android:id="@+id/customerAdd"
                    style="@style/mytextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="8dp"
                    android:text="Add" />
            </LinearLayout>

            <ListView
                android:id="@+id/listView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/mylistview"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >
            </ListView>

            <RelativeLayout
                android:id="@+id/totalamount"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/myedittext" >

                <TextView
                    android:id="@+id/allTotal"
                    style="@style/mytextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/totallabel"
                    android:layout_alignBottom="@+id/totallabel"
                    android:layout_toLeftOf="@+id/lira"
                    android:gravity="center_vertical"
                    android:text="25"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/lira"
                    style="@style/mytextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/allTotal"
                    android:layout_alignBottom="@+id/allTotal"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:paddingRight="7dp"
                    android:text="L.L"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/totallabel"
                    style="@style/mytextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:text="@string/total"
                    android:textSize="19sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/orderbuttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp" >

                <TextView
                    android:id="@+id/textView6"
                    style="@style/mytextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/deliveryguy" />

                <Spinner
                    android:id="@+id/delivery_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView6"
                    android:background="@drawable/myspinner"
                    android:paddingRight="22dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView7"
                style="@style/mytextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/preparer" />

            <Spinner
                android:id="@+id/preparer_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/myspinner"
                android:paddingRight="22dp" />

            <TextView
                android:id="@+id/textView5"
                style="@style/mytextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/status" />

            <Spinner
                android:id="@+id/order_status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/myspinner"
                android:paddingRight="22dp" />

            <TextView
                android:id="@+id/notes"
                style="@style/mytextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="23dp"
                android:text="@string/notes" />

            <EditText
                android:id="@+id/noteinput"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:gravity="top"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:singleLine="false" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="7dp"
        android:background="@drawable/mybutton"
        android:onClick="cancel"
        android:text="@string/cancel"
        android:textColor="#6f6f71"
        android:textSize="18sp" />
    
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"
        android:onClick="submit"
        android:text="@string/submit"
        android:textColor="#6f6f71"
        android:textSize="18sp" />

    

</LinearLayout>