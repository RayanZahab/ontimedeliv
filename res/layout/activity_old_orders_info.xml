<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myred"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_left_margin"
    android:paddingRight="@dimen/activity_left_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myborder"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/customerName"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="" />

        <TextView
            android:id="@+id/customerAdd"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/mylistview" >
        </ListView>

        <RelativeLayout
            android:id="@+id/totalamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lira"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/total"
                android:layout_alignBottom="@+id/total"
                android:layout_alignParentRight="true"
                android:text="L.L"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/total"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/totallabel"
                android:layout_alignBottom="@+id/totallabel"
                android:layout_toLeftOf="@+id/lira"
                android:text="25"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/totallabel"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/total"
                android:textSize="19sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/orderbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp" >

            <TextView
                android:id="@+id/textView6"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/deliveryguy" />

            <Spinner
                android:id="@+id/delivery_Spinner"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:paddingRight="22dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView6"
                android:background="@drawable/myspinner"
                 />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView7"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preparer" />

        <Spinner
            android:id="@+id/preparer_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="22dp"
            android:background="@drawable/myspinner"
             />

        <TextView
            android:id="@+id/notes"
            style="@style/mytextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="@string/notes" />

        <TextView
            android:id="@+id/noteinput"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/myedittext"
            android:ems="10"
            android:singleLine="false" />

    </LinearLayout>

</ScrollView>