<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myred"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin" >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <EditText
                android:id="@+id/productName"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="@string/productname"
                android:inputType="text"
                android:minWidth="30dp"
                android:paddingLeft="8dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/uploadimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:background="@drawable/mybutton"
                android:minWidth="80dp"
                android:text="@string/selectphoto"
                android:textColor="#6f6f71" />

            <EditText
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/productName"
                android:layout_below="@+id/productName"
                android:layout_marginTop="14dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/description"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:singleLine="false"
                android:textSize="12sp" >

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/preview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/uploadimage"
                android:layout_toRightOf="@+id/uploadimage"
                android:src="@drawable/moto" />

            <TextView
                android:id="@+id/textView5"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/units"
                android:layout_toRightOf="@+id/price"
                android:text="@string/slash"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/price"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignLeft="@+id/uploadimage"
                android:layout_toLeftOf="@+id/preview"
                android:background="@drawable/edittext"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/priceunit"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView3"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/description"
                android:layout_below="@+id/description"
                android:layout_marginTop="26dp"
                android:text="@string/producticon" />

            <Spinner
                android:id="@+id/units"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignRight="@+id/description"
                android:layout_below="@+id/preview"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/textView5"
                android:background="@drawable/myspinner" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/addProduct"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/scroll"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/mybutton"
        android:onClick="addProduct"
        android:text="@string/submit"
        android:textColor="#6f6f71"
        android:textSize="18sp" />

</RelativeLayout>