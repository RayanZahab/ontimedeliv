<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3c5a99">

    <ImageView
        android:id="@+id/sublogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/sublogologin" />
    
    <LinearLayout 
      	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dp"
    	android:layout_centerHorizontal="true"
    	android:layout_below="@+id/sublogo"
    	android:orientation="vertical" >
    	
        	<LinearLayout 
        	    android:layout_width="match_parent"
        		android:layout_height="0dp"
        		android:layout_weight="1"
        		android:orientation="horizontal">
        	    
        	    <LinearLayout 
        	        android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:layout_weight="1"
    				android:orientation="vertical">
        	        
        	        <ImageView
        	            android:id="@+id/branches"
            			android:layout_width="75dp"
            			android:layout_height="75dp"
            			android:onClick="select"
            			android:layout_gravity="center"
            			android:src="@drawable/branchesicon"/>
        	        <TextView
        	            android:id="@+id/branchestext"
        	            android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_gravity="center"
            			android:text="@string/branches"
            			android:textColor="#ffffff" />
        	    </LinearLayout>
        	    <LinearLayout 
        	        android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:layout_weight="1"
    				android:orientation="vertical">
        	        
        	        <ImageView
        	            android:id="@+id/user"
            			android:layout_width="75dp"
            			android:layout_height="75dp"
            			android:onClick="select"
            			android:layout_gravity="center"
            			android:src="@drawable/usericon"/>
        	        <TextView
        	            android:id="@+id/userstext"
        	            android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_gravity="center"
            			android:text="@string/users"
            			android:textColor="#ffffff" />
        	    </LinearLayout>
        	    
        	</LinearLayout>
        	<LinearLayout 
        	    android:layout_width="match_parent"
        		android:layout_height="0dp"
        		android:layout_weight="1"
        		android:layout_marginTop="10dp"
        		android:orientation="horizontal">
        	    
        	    <LinearLayout 
        	        android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:layout_weight="1"
    				android:orientation="vertical">
        	        
        	        <ImageView
        	            android:id="@+id/orders"
            			android:layout_width="75dp"
            			android:layout_height="75dp"
            			android:onClick="select"
            			android:layout_gravity="center"
            			android:src="@drawable/newordericon"/>
        	        <TextView
        	            android:id="@+id/neworderstext"
        	            android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_gravity="center"
            			android:text="@string/new_orders"
            			android:textColor="#ffffff" />
        	    </LinearLayout>
        	    <LinearLayout 
        	        android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:layout_weight="1"
    				android:orientation="vertical">
        	        
        	        <ImageView
        	            android:id="@+id/assignedoerders"
            			android:layout_width="75dp"
            			android:layout_height="75dp"
            			android:layout_gravity="center"
            			android:onClick="select"
            			android:src="@drawable/assignedicon"/>
        	        <TextView
        	            android:id="@+id/assignedtext"
        	            android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_gravity="center"
            			android:text="@string/assigned_orders"
            			android:textColor="#ffffff" />
        	    </LinearLayout>
        	    
        	    
        	</LinearLayout>
        	<LinearLayout 
        	    android:layout_width="match_parent"
        		android:layout_height="0dp"
        		android:layout_weight="1"
        		android:layout_marginTop="10dp"
        		android:orientation="horizontal">
        	    
        	    <LinearLayout 
        	        android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:layout_weight="1"
    				android:orientation="vertical">
        	        
        	        <ImageView
        	            android:id="@+id/closed"
            			android:layout_width="75dp"
            			android:layout_height="75dp"
            			android:onClick="select"
            			android:layout_gravity="center"
            			android:src="@drawable/deliveredicon"/>
        	        <TextView
        	            android:id="@+id/closedtext"
        	            android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_gravity="center"
            			android:text="@string/closed_orders"
            			android:textColor="#ffffff" />
        	    </LinearLayout>
        	    <LinearLayout 
        	        android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:layout_weight="1"
    				android:orientation="vertical">
        	        
        	        <ImageView
        	            android:id="@+id/canceled"
            			android:layout_width="75dp"
            			android:layout_height="75dp"
            			android:layout_gravity="center"
            			android:onClick="select"
            			android:src="@drawable/deliveredicon"/>
        	        <TextView
        	            android:id="@+id/canceledtext"
        	            android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_gravity="center"
            			android:text="@string/canceled_orders"
            			android:textColor="#ffffff" />
        	    </LinearLayout>
        	    
        	    
        	</LinearLayout>
        
    </LinearLayout>
    
    <ImageView
            android:id="@+id/settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/about"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="select"
            android:src="@drawable/settings" />

        <ImageView
            android:id="@+id/about"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/sublogo"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:onClick="select"
            android:src="@drawable/about" />

</RelativeLayout>