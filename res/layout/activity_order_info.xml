<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myred"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myborder"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/textView1"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/clientinfo"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView3"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/username" />

        <TextView
            android:id="@+id/textView2"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/address" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mylistview"
            android:layout_marginTop="8dp" >
        </ListView>

        <RelativeLayout
            android:id="@+id/totalamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/total"
                android:layout_alignBottom="@+id/total"
                android:layout_alignParentRight="true"
                android:text="25000 L.L"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/total"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/total"
                android:textSize="19sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/orderbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp" >

            <TextView
                android:id="@+id/textView5"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/delivery_Spinner"
                android:text="@string/status" />

            <Spinner
                android:id="@+id/order_status"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/delivery_Spinner"
                android:layout_below="@+id/textView5"
                android:background="@drawable/myspinner" />

            <TextView
                android:id="@+id/textView6"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/deliveryguy" />

            <Spinner
                android:id="@+id/delivery_Spinner"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView6"
                android:background="@drawable/myspinner" />

            <TextView
                android:id="@+id/textView7"
                style="@style/mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/preparer_spinner"
                android:layout_alignLeft="@+id/preparer_spinner"
                android:text="@string/preparer" />

            <Spinner
                android:id="@+id/preparer_spinner"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_above="@+id/textView5"
                android:layout_alignParentRight="true"
                android:background="@drawable/myspinner" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView7"
                android:layout_alignTop="@+id/order_status"
                android:background="@drawable/mybutton"
                android:text="@string/cancel"
                android:textColor="#ffffff" />
        </RelativeLayout>
        
        <TextView
            android:id="@+id/notes"
            style="@style/mytextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="@string/notes" />

        <EditText
            android:id="@+id/noteinput"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/myedittext"
            android:ems="10"
            android:minLines="3"
            android:inputType="text" />

        <Button
            android:id="@+id/select"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@drawable/mybutton"
            android:text="@string/submit"
            android:textColor="#ffffff" />

    </LinearLayout>

</ScrollView>