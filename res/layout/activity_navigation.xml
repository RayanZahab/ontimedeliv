<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myred"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin" >
    
   

        <Button
                android:id="@+id/orders"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ordersbutton"
                android:text="Orders"
	            android:gravity="bottom"
	            android:textColor="#6f6f71"
	            android:paddingBottom="5dp"
	            android:textAlignment="center"
                android:minWidth="80dp"
                android:onClick="select" />
        
        <Button
                android:id="@+id/categories"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/categoriesbutton"
                android:text="Categories"
	            android:gravity="bottom"
	            android:textColor="#6f6f71"
	            android:paddingBottom="5dp"
	            android:textAlignment="center"
                android:minWidth="80dp"
                android:onClick="select" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/categories"
            android:src="@drawable/sublogo" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/categories"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/settings" />

        <ImageView
            android:id="@+id/about"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/settings"
            android:layout_toLeftOf="@+id/settings"
            android:layout_marginRight="15dp"
            android:src="@drawable/about" />

        <Button
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/orders"
            android:layout_alignLeft="@+id/orders"
            android:layout_marginBottom="20dp"
            android:text="Branches"
            android:gravity="bottom"
            android:textColor="#6f6f71"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:background="@drawable/branhesbutton" />

        <Button
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignRight="@+id/categories"
            android:text="Users"
            android:gravity="bottom"
            android:textColor="#6f6f71"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:background="@drawable/usersbutton" />
    
</RelativeLayout>