<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp" >
    
    <LinearLayout
      	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:orientation="horizontal" >
    	
    	<LinearLayout 
    	    android:id="@+id/quantityandprice"
    	    android:layout_width="0dp"
    	    android:layout_height="26dp"
    	    android:layout_weight="0.4"
    	    android:layout_gravity="right|center_vertical"
    	    android:gravity="center"
    	    android:background="@drawable/bar_ar">
    	    
    	    <TextView 
	    	    android:id="@+id/unitprice"
	    	    android:layout_width="0dp"
	    	    android:layout_height="wrap_content"
	    	    android:layout_weight="0.7"
	    	    android:layout_gravity="center_vertical"
	    	    android:gravity="right"
	    	    android:text="2000L.L x"
	    	    android:textColor="#ffffff" />
    	    
    	    <TextView 
	    	    android:id="@+id/quantity"
	    	    android:layout_width="0dp"
	    	    android:layout_height="wrap_content"
	    	    android:layout_weight="0.3"
	    	    android:layout_gravity="center_vertical"
	    	    android:gravity="center"
	    	    android:layout_marginRight="8dp"
	    	    android:text="3"
	    	    android:textColor="#ffffff" />
    	    
    	</LinearLayout>
    	
    	<TextView
    	    android:id="@+id/itemname" 
    	    android:layout_width="0dp"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="0.4"
    	    android:singleLine="false"
    	    android:textColor="@color/textview"
    	    android:text="جكانسدجكاسدج"
    	    android:layout_gravity="right|center_vertical"/>
    	
    	
    	<LinearLayout
	      	android:layout_width="0dp"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:gravity="center"
	    	android:layout_weight="0.2"
	    	android:orientation="vertical" >
    		
    	    <ImageView 
    	        android:id="@+id/plus"
    	        android:layout_weight="1"
    	        android:layout_height="30dp"
    	        android:layout_width="30dp"
    	        android:src="@drawable/plussign" />
    	    <ImageView 
    	        android:id="@+id/minus"
    	        android:layout_weight="1"
    	        android:layout_width="30dp"
    	        android:layout_height="30dp"
    	        android:src="@drawable/minussign"/>
    	</LinearLayout>

    </LinearLayout>
    
    <ImageView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="8dp"
	    android:src="@drawable/dotted" />
    
    <LinearLayout 
       	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:layout_marginTop="5dp"
    	android:orientation="horizontal">
        
        <TextView
            android:id="@+id/price_lira"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/lira"
            android:textColor="@color/textview" />
        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="1000"
            android:textColor="@color/textview" />
        
        <TextView 
            android:id="@+id/price_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sub Total:"
            android:textColor="@color/textview"/>
    </LinearLayout>

    
</LinearLayout>